{
    "gamename": "Template",
    "players": 2,
    "gui": {
        "rows": 2,
        "cols": 2
    },
    "zones": {
        "deck": {
            "type": "stack",
            "description": "location designates position in gui grid, and offset desgnates the offset of adjacent objects in collection. gui only",
            "location": [[0,0]],
            "offset": [-0.01,-0.005]
        }
    },
    "variables": {
        "var": "-- set on init"
    },
    "init": [ 
        "-- scripts to call on initialization",
        "self.zones.deck:load_collection(Card, self.collections.poker, {}):shuffle()"
    ],
    "gamestates": {
        "deal": {
            "on_enter": [
                "-- scripts to run on entering state"
            ],
            "actions": {
                "action 1": {
                    "condition": [
                        "-- function that must evaluate to true",
                        "return #self.zones.deck > 0"
                    ],
                    "targets": {
                        "name": "target",
                        "candidates": ["-- list or zone to find valid targets"],
                        "condition": "-- function that evaluates to boolean",
                        "min_targets": "optional, default 1",
                        "max_targets": "optional, default min_targets"
                    },
                    "execution": [
                        "-- scripts to be executed"
                    ]
                }
            },
            "on-action": [
                "-- scripts to call after each action"
            ]
        },
        "end": {
            "on_enter": [

            ]
        }
    }
}